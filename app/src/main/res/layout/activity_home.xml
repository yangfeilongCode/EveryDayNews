<?xml version="1.0" encoding="utf-8"?>
<!-- 左右滑动 android.support.v4.widget.DrawerLayout-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--中间布局-->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_home_centre"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_home_tittle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_home_world"
                android:gravity="center"
                android:text="社会"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_home_war"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="军事"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/iv_home_right_image"
                android:src="@mipmap/typemore_normal"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_home_left"
        android:layout_gravity="left"
        android:layout_width="260dp"
        android:layout_height="match_parent">
      <!--  <include layout="@layout/show_list_home"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />-->
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_home_right"
        android:layout_gravity="right"
        android:layout_width="260dp"
        android:layout_height="match_parent">

      <!--  <include layout="@layout/login_home"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />-->
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
